@model Cottage
@{
    ViewData["Title"] = "Add a Cottage";
}
<h1>@ViewData["Title"]</h1>
<form asp-action="AddCottage" method="post">
    <div class="row">
        <div class="column add-cottage">
            <div class="form-group">
                <label asp-for="Name">Name:</label>
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Bathrooms">Bathrooms:</label>
                <input class="form-control" asp-for="Bathrooms" />
            </div>
            <div class="form-group">
                <label asp-for="Bedrooms">Bedrooms:</label>
                <input class="form-control" asp-for="Bedrooms" />
            </div>
            <div class="form-group">
                <label asp-for="BuiltDate">Built Date: (ex: "2021-04-11T17:16:40")</label>
                <input class="form-control" asp-for="BuiltDate" />
            </div>
            <div class="form-group">
                <label asp-for="Summary">Summary:</label>
                <input class="form-control" asp-for="Summary" />
            </div>
            <div class="form-group">
                <label asp-for="MaxGuest">Max Guest:</label>
                <input class="form-control" asp-for="MaxGuest" />
            </div>
        </div>
        <div class="column add-cottage">
            <div class="form-group">
                <label asp-for="SquareFootage">Square Footage:</label>
                <input class="form-control" asp-for="SquareFootage" />
            </div>
            <div class="form-group">
                <label asp-for="Address">Address:</label>
                <input class="form-control" asp-for="Address" />
            </div>
            <div class="form-group">
                <label asp-for="City">City:</label>
                <input class="form-control" asp-for="City" />
            </div>
            <div class="form-group">
                <label asp-for="State">State:</label>
                <input class="form-control" asp-for="State" />
            </div>
            <div class="form-group">
                <label asp-for="PostalCode">Postal Code:</label>
                <input class="form-control" asp-for="PostalCode" />
            </div>
            <div class="form-group">
                <label asp-for="Country">Country:</label>
                <input class="form-control" asp-for="Country" />
            </div>
            <div class="text-center panel-body">
                <button type="submit" class="btn btn-sm btn-primary">Add</button>
            </div>
        </div>
    </div>
</form>
